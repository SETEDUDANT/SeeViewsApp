<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#01DA58"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seeviews.ui.personal_info.activity_personalinfo"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout2"
        android:layout_weight="0.26">


        <include
            android:id="@+id/appbar"
            layout="@layout/toolbar_personalinfo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="294dp"
            android:layout_height="53dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="BEFORE YOU SAVE, PLEASE TELL US A BIT MORE ABOUT YOURSELF  :-)"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="294dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_weight="0.665">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:fillViewport="true"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(NICK) NAME: "
                    android:textColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="@+id/eTname"
                    tools:layout_editor_absoluteY="372dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:text=" (WILL BE SHOWN "
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:text="WITH YOUR SEEVIEWS)"
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />

                <EditText
                    android:id="@+id/eTname"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:background="@drawable/personalinfo"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:layout_editor_absoluteX="32dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="E_MAIL:"
                    android:textColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="@+id/eTeMail"
                    app:layout_constraintTop_toBottomOf="@+id/eTname" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:text="(WILL STAY PRIVATE"
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:text="SO NO ONE WILL SEE YOUR E-MAIL)"
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                <EditText
                    android:id="@+id/eTeMail"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:background="@drawable/personalinfo"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="32dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="AGE:"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@+id/eTeMail"
                    tools:layout_editor_absoluteX="32dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="3dp"
                    android:text="(WILL BE SHOWN"
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/textView13"
                    app:layout_constraintTop_toTopOf="@+id/textView13" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:text="WITH YOUR SEEVIEWS)"
                    android:textColor="@android:color/white"
                    android:textSize="9dp"
                    app:layout_constraintLeft_toRightOf="@+id/textView14"
                    app:layout_constraintTop_toTopOf="@+id/textView13" />

                <Button
                    android:id="@+id/bt20"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:text="20"
                    android:textColor="#01DA58"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    tools:layout_editor_absoluteX="32dp" />

                <Button
                    android:id="@+id/bt2130"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:text="21/30"
                    android:textColor="#01DA58"
                    app:layout_constraintLeft_toRightOf="@+id/bt20"
                    app:layout_constraintTop_toTopOf="@+id/bt20" />

                <Button
                    android:id="@+id/bt3140"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:text="31/40"
                    android:textColor="#01DA58"
                    app:layout_constraintLeft_toRightOf="@+id/bt2130"
                    app:layout_constraintTop_toTopOf="@+id/bt20" />

                <Button
                    android:id="@+id/bt4150"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:text="41/50"
                    android:textColor="#01DA58"
                    app:layout_constraintLeft_toRightOf="@+id/bt3140"
                    app:layout_constraintTop_toTopOf="@+id/bt20" />

                <Button
                    android:id="@+id/bt5160"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff"
                    android:text="51/60"
                    android:textColor="#01DA58"
                    app:layout_constraintLeft_toLeftOf="@+id/bt20"
                    app:layout_constraintTop_toBottomOf="@+id/bt20" />

                <Button
                    android:id="@+id/bt6170"
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:text="61/70"
                    android:textColor="#01DA58"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/bt5160"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bt5160" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="YOUR ROOM NUMBER:"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@+id/bt5160"
                    tools:layout_editor_absoluteX="32dp" />

                <EditText
                    android:id="@+id/eTroomNumber"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/personalinfo"
                    app:layout_constraintLeft_toLeftOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="LANGUAGE:"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@+id/eTroomNumber"
                    tools:layout_editor_absoluteX="32dp" />

                <Spinner
                    android:id="@+id/spinner4"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="294dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    tools:layout_editor_absoluteX="32dp" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#EE4A17"
            android:onClick="sendDataToServer"
            android:src="@android:drawable/ic_menu_search"
            android:text="SAVE YOUR DETAILS AND GO!"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/iBgarbage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bak"
            android:scaleType="fitXY" />

    </LinearLayout>
    android:text="TextView"
    tools:layout_editor_absoluteX="46dp"
    tools:layout_editor_absoluteY="69dp" />

</LinearLayout>