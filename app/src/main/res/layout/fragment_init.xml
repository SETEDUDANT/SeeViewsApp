<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_init"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/init_horizontal_margin"
    android:paddingRight="@dimen/init_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.seeviews.ui.init.InitActivityFragment"
    tools:showIn="@layout/activity_init">

    <ImageView
        android:id="@+id/init_center_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_logo" />

    <LinearLayout
        android:id="@+id/init_center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/init_header_top"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/init_header_bottom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/init_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6">

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <!--<eightbitlab.com.blurview.BlurView-->
                    <!--android:id="@+id/init_input_blur1"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginEnd="8dp"-->
                    <!--android:layout_weight="1">-->

                    <TextView
                        android:id="@+id/init_input1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="1" />

                    <!--</eightbitlab.com.blurview.BlurView>-->
                </com.wonderkiln.blurkit.BlurLayout>

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <TextView
                        android:id="@+id/init_input2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="2" />

                </com.wonderkiln.blurkit.BlurLayout>

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <TextView
                        android:id="@+id/init_input3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="3" />

                </com.wonderkiln.blurkit.BlurLayout>

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <TextView
                        android:id="@+id/init_input4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="4" />

                </com.wonderkiln.blurkit.BlurLayout>

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <TextView
                        android:id="@+id/init_input5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="5" />

                </com.wonderkiln.blurkit.BlurLayout>

                <com.wonderkiln.blurkit.BlurLayout
                    android:id="@+id/init_input_blur6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:blurRadius="4"
                    app:fps="5">

                    <TextView
                        android:id="@+id/init_input6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_init_input"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="56dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="6" />
                </com.wonderkiln.blurkit.BlurLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/init_input_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:inputType="textCapCharacters|textVisiblePassword"
                android:textSelectHandle="@drawable/ic_empty_handle"
                android:textSelectHandleLeft="@drawable/ic_empty_handle"
                android:textSelectHandleRight="@drawable/ic_empty_handle" />

            <ProgressBar
                android:id="@+id/init_loading"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:indeterminateOnly="true" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/init_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/init_center_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/init_error"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />
</RelativeLayout>
